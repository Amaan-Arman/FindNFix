@model WebApplication1.Models.login
@{
    Layout = null;
}
<!doctype html>
<html lang="en" dir="ltr">

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">

<link rel="icon" href="favicon.ico" type="image/x-icon"/>

<title>FindNFix | Register</title>

<!-- Bootstrap Core and vandor -->
<link rel="stylesheet" href="~/admin_assets/plugins/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/admin_assets/fontawesome-free/css/all.css">
<link rel="stylesheet" href="~/admin_assets/fontawesome-free/css/all.min.css">
<!-- Core css -->
<link rel="stylesheet" href="~/admin_assets/css/main.css"/>
<link rel="stylesheet" href="~/admin_assets/css/theme1.css"/>
 <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>


</head>
<body class="font-montserrat" ng-app="Homeapp">

    <div class="auth" ng-controller="LoginController">
    <div class="auth_left">
        <div class="card">
            <div class="text-center mb-2">
                <a class="header-brand" href="#"><i class="fa fa-soccer-ball-o brand-logo"></i></a>
            </div>
            <div class="card-body" ng-show="!Registerblock">
                <div class="card-title">Create new account</div>
                <div class="form-group">
                    <label class="form-label">Name</label>
                        @Html.TextBoxFor(model => model.user_name, new { @class = "form-control", @type = "text", @placeholder = "Enter name", id = "user_name_id", @autocomplete = "off" })
                    <span id="Name_id_errormessage" class="small"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Email address</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @placeholder = "Enter Email", id = "Email_id", @autocomplete = "off" })
                    <span id="Email_id_errormessage" class="small"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control",@type = "password", @placeholder = "Enter Password", id = "Password_id", @autocomplete = "off" })
                    <span id="Password_id_errormessage" class="small "></span>
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" />
                    <span class="custom-control-label">Agree the <a href="#">terms and policy</a></span>
                    </label>
                </div>
                <div class="form-footer">
                     <button type="submit" id="CreateBtnID" class="btn btn-primary btn-block" ng-click="RegistrationFunction()">Create new account</button>
                </div>
            </div>
            <div class="card-body" ng-show="!OTPblock">
                <div class="form-group">
                    <label class="form-label">OTP</label>
                    @Html.TextBoxFor(model => model.otp_num, new { @class = "form-control", @type="number", @placeholder = "Enter OTP", id = "otp_id", @autocomplete = "off" })
                     <span id="otp_num_id_errormessage" class="small "></span>
                </div>
                <div class="form-footer">
                      <button type="submit" class="btn btn-primary btn-block" ng-click="OTPFunction()">Confirm</button>
                </div>
            </div>
            <div class="text-center text-muted">
                Already have account? <a href="/login/">Sign in</a>
            </div>
        </div>
    </div>
    <div class="auth_right full_img"></div>
</div>

    <script src="~/admin_assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/js/angular.min.js"></script>
    <script src="~/ControllerScript/LoginController.js"></script>
    <script src="~/~/admin_assets/js/core.js"></script>
    <script>
        debugger
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $("#CreateBtnID").click();
            }
        });
        $(function () {
            $("#user_name_id").keyup(function () {
                var user_name_id = $("#user_name_id").val();
                if (user_name_id.trim().length > 0) {
                    $("#Name_id_errormessage").html("");
                    $("#user_name_id").css({ "border-color": "", "border-weight": "", "border-style": "" });
                }

            })
        });
        $(function () {
            $("#Email_id").keyup(function () {
                var Email_id = $("#Email_id").val();
                if (Email_id.trim().length > 0) {
                    $("#Email_id_errormessage").html("");
                    $("#Email_id").css({ "border-color": "", "border-weight": "", "border-style": "" });
                }

            })
        });
        $(function () {
            $("#Password_id").keyup(function () {
                var Password_id = $("#Password_id").val();
                if (Password_id.trim().length > 0) {
                    $("#Password_id_errormessage").html("");
                    $("#Password_id").css({ "border-color": "", "border-weight": "", "border-style": "" });
                }

            })
        });
    </script>
</body>

</html>
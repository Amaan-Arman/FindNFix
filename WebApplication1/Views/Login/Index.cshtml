@model WebApplication1.Models.login
@{
    Layout = null;
}
<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="~/admin_assets/images/comapanylogo.jpg" type="image/x-icon" />

    <title>FindNFix | Login</title>

    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="~/admin_assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin_assets/fontawesome-free/css/all.css">
    <link rel="stylesheet" href="~/admin_assets/fontawesome-free/css/all.min.css">
    <!-- Core css -->
    <link rel="stylesheet" href="~/admin_assets/css/main.css" />
    <link rel="stylesheet" href="~/admin_assets/css/theme1.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

</head>
<body class="font-montserrat" ng-app="Homeapp">

    <div class="auth" ng-controller="LoginController">
        <div class="auth_left">
            <div class="card">
                <div class="text-center mb-2">
                    <a class="header-brand" href="#"><i class="fa fa-fire-alt brand-logo"></i></a>
                </div>
                <h6 class="text-center fw-bold">Welcome to The FindNFix </h6>
                <hr />
                <div class="card-body">
                    <form id="LoginformID">
                        <div class="card-title">Login to your account</div>
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            @Html.TextBoxFor(model => model.login_id, new { @class = "form-control", @placeholder = "User ID", id = "login_id", @autocomplete = "off" })
                            <span id="login_id_errormessage" class="small p-2"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password@*<a href="forgot-password.html" class="float-right small">I forgot password</a>*@</label>
                            @Html.TextBoxFor(model => model.Password, new { @type = "Password", @class = "form-control", @placeholder = "Password", id = "Password_id", @autocomplete = "off" })
                            <span id="Password_id_errormessage" class="small p-2"></span>
                        </div>
                        <div class="form-footer">
                            <button id="LoginBtnID" class="btn btn-primary btn-block" title="login" ng-click="LoginFunction('#LoginformID')">Sign in</button>
                        </div>
                    </form>
                </div>
                <div class="text-center text-muted">
                Don't have account yet? <a href="/login/register">Sign up</a>
                </div>
            </div>
        </div>
        <div class="auth_right full_img"></div>
    </div>

    @* <script src="~/admin_assets/bundles/lib.vendor.bundle.js"></script> *@
    <script src="~/js/angular.min.js"></script>
    <script src="~/ControllerScript/LoginController.js"></script>
    <script src="~/admin_assets/js/core.js"></script>
    <script>
        debugger
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $("#LoginBtnID").click();
            }
        });
        $(function () {
            $("#login_id").keyup(function () {
                var login_id = $("#login_id").val();
                if (login_id.trim().length > 0) {
                    $("#login_id_errormessage").html("");
                    $("#login_id").css({ "border-color": "", "border-weight": "", "border-style": "" });
                }

            })
        });
        $(function () {
            $("#Password_id").keyup(function () {
                var Password_id = $("#Password_id").val();
                if (Password_id.trim().length > 0) {
                    $("#Password_id_errormessage").html("");
                    $("#Password_id").css({ "border-color": "", "border-weight": "", "border-style": "" });
                }

            })
        });
    </script>

</body>

</html>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page" ng-controller="HistoryController">
    <partial name="_Header" />

    <div class="section-body mt-3">
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="mb-4">
                        <h4>Welcome Peter Richards!</h4>
                        <small>Measure How Fast You’re Growing Monthly Recurring Revenue. <a href="#">Learn More</a></small>
                    </div>
                </div>
            </div>
            <div class="row clearfix row-deck">
                @if (TempData["login_type"] != null && TempData["login_type"].ToString() == "Seller")
                {
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Today Earning </h3>
                            </div>
                            <div class="card-body" ng-repeat="c in GetEarning">
                                <h5 class="number mb-0 font-32 " >{{c.todayEarning}}</h5>
                                <span class="font-12"><a href="#">More</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">yesterday Earning </h3>
                            </div>
                            <div class="card-body" >
                                <h5 class="number mb-0 font-32 counter" ng-repeat="c in GetEarning">{{c.yesterdayEarning}}</h5>
                                <span class="font-12"> <a href="#">More</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Weekly Earning </h3>
                            </div>
                            <div class="card-body">
                                <h5 class="number mb-0 font-32 counter" ng-repeat="c in GetEarning">{{c.weeklyEarning}}</h5>
                                <span class="font-12"> <a href="#">More</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="card" ng-repeat="c in GetEarning">
                            <div class="card-header">
                                <h3 class="card-title">Monthly Earning  </h3>
                            </div>
                            <div class="card-body" >
                                <h5 class="number mb-0 font-32 ">{{c.monthlyEarning}}</h5>
                                <span class="font-12"> <a href="#">More</a></span>
                            </div>
                        </div>
                    </div>
                    
                }
                else
                {
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Active Users</h3>
                            </div>
                            <div class="card-body">
                                <h5 class="number mb-0 font-32 counter">31</h5>
                                <span class="font-12"><a href="#">More</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Active Sellers</h3>
                            </div>
                            <div class="card-body">
                                <h5 class="number mb-0 font-32 counter">245</h5>
                                <span class="font-12"> <a href="#">More</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">De-Active Sellers</h3>
                            </div>
                            <div class="card-body">
                                <h5 class="number mb-0 font-32 counter">17</h5>
                                <span class="font-12"> <a href="#">More</a></span>
                            </div>
                        </div>
                    </div>
                }
          
            </div>
           
        </div>
    </div>

    <div class="section-body">
        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <a href="#"></a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

<script src="~/js/angular.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script src="~/ControllerScript/HistoryController.js"></script>

